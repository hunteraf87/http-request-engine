{
  "compilerOptions": {
    "target": "es2021",                                  
    "experimentalDecorators": true,                   
    "module": "CommonJS",                                
    "rootDir": "./src",                                  
    "paths": {
      "@base_structures": ["./src/base_structures"],
      "@cache": ["./src/cache"]
    },                                      
    "sourceMap": false,                                
    "outDir": "./dist/",                                   
    "removeComments": true,                           
    "noEmitOnError": true,                            
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    "strict": true,                                      
    "noImplicitAny": false,                            
    "strictNullChecks": true,                         
    "strictFunctionTypes": true,                      
    "skipLibCheck": true                                 
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
